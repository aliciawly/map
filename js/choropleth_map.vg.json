
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP by Country (2023 Projection)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
  "url": "js/ne_110m.json",
  "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
"from": {
  "data": {
    "url": "data/GDP2023.csv"
  },
  "key": "State",
  "fields": ["GDP"]
}
    },
    {"calculate": "datum['2023p'] || 0", "as": "GDP"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "GDP",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [1000, 10000, 100000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "GDP", "type": "quantitative", "format": ",.0f", "title": "GDP (millions USD)"}
    ]
  }
}