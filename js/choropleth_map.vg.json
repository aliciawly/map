{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP by Country (2023 Projection)",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/aliciawly/map/refs/heads/main/js/ne_1%20.topojson",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/aliciawly/map/refs/heads/main/data/GDP2023.csv"
        },
        "key": "State",
        "fields": ["GDP"]
      }
    },
    {"calculate": "datum['GDP'] || 1", "as": "GDP"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "GDP",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [500, 5000, 50000],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "State"},
      {"field": "GDP", "type": "quantitative", "format": ",.0f", "title": "GDP (millions USD)"}
    ]
  }
}
